{
  "expo": {
    "name": "schdup",
    "slug": "schdup",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Record videos to schedule uploads.",
        "NSMicrophoneUsageDescription": "Capture audio when recording videos.",
        "NSPhotoLibraryUsageDescription": "Select videos for scheduled uploads.",
        "NSPhotoLibraryAddUsageDescription": "Save thumbnails and exported videos.",
        "NSUserNotificationUsageDescription": "Notify you when scheduled uploads are due."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-router"]
  }
}
